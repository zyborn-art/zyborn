<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ pressData.title }}</title>
    <meta name="description" content="{{ pressData.meta_description }}">
    {% if pressData.canonical_url %}<link rel="canonical" href="{{ pressData.canonical_url }}">{% endif %}
    
    <!-- Open Graph -->
    <meta property="og:title" content="{{ pressData.title }}">
    <meta property="og:description" content="{{ pressData.meta_description }}">
    <meta property="og:type" content="website">
    <meta property="og:image" content="https://zyborn.com/images/hero.png">
    {% if pressData.canonical_url %}<meta property="og:url" content="{{ pressData.canonical_url }}">{% endif %}
    
