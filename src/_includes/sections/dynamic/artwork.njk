{# DYNAMIC ARTWORK SECTION #}
<section class="artwork" id="artwork">
    <div class="container">
        <div class="artwork-info">
            <h2 class="artwork-title">{{ section.title }}</h2>
            
            <dl class="artwork-details">
                <div class="detail-row">
                    <dt>Artist</dt>
                    <dd>{{ section.artist }}</dd>
                </div>
                {% if section.year %}
                <div class="detail-row">
                    <dt>Year</dt>
                    <dd>{{ section.year }}</dd>
                </div>
                {% endif %}
                <div class="detail-row">
                    <dt>Medium</dt>
                    <dd>{{ section.medium }}</dd>
                </div>
                <div class="detail-row">
                    <dt>Dimensions</dt>
                    <dd>{{ section.dimensions }}</dd>
                </div>
                <div class="detail-row">
                    <dt>Edition</dt>
                    <dd>{{ section.edition }}</dd>
                </div>
                {% if section.framing %}
                <div class="detail-row">
                    <dt>Framing</dt>
                    <dd>{{ section.framing }}</dd>
                </div>
                {% endif %}
            </dl>
            
            {% if section.inclusions %}
                <div class="artwork-inclusions">
                    <h3>Includes</h3>
                    <ul>
                        {% for item in section.inclusions %}
                            <li>{{ item.item if item.item else item }}</li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
        </div>
        
        {% if section.image %}
            <div class="artwork-image">
                <img src="{{ section.image }}" alt="{{ section.title }}">
            </div>
        {% endif %}
    </div>
</section>
