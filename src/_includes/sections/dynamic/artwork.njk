{# DYNAMIC ARTWORK SECTION - Matches original CSS structure #}
<section class="artwork animate-on-scroll" id="artwork">
    <div class="container">
        <div class="artwork-header">
            <p class="meta artwork-label">Artwork Details</p>
            <h2 class="artwork-title">Technical Specifications</h2>
        </div>
        
        <div class="artwork-grid">
            <div class="artwork-specs">
                <div class="spec-row">
                    <span class="meta spec-label">Title</span>
                    <span class="spec-value">{{ section.title }}</span>
                </div>
                <div class="spec-row">
                    <span class="meta spec-label">Artist</span>
                    <span class="spec-value">{{ section.artist }}</span>
                </div>
                <div class="spec-row">
                    <span class="meta spec-label">Medium</span>
                    <span class="spec-value">{{ section.medium }}</span>
                </div>
                <div class="spec-row">
                    <span class="meta spec-label">Dimensions</span>
                    <span class="spec-value">{{ section.dimensions }}</span>
                </div>
                <div class="spec-row">
                    <span class="meta spec-label">Edition</span>
                    <span class="spec-value">{{ section.edition }}</span>
                </div>
                {% if section.framing %}
                <div class="spec-row">
                    <span class="meta spec-label">Framing</span>
                    <span class="spec-value">{{ section.framing }}</span>
                </div>
                {% endif %}
            </div>
            
            {% if section.inclusions %}
            <div class="artwork-inclusions">
                <h3>Included with purchase</h3>
                <ul class="inclusion-list">
                    {% for item in section.inclusions %}
                    <li>
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                            <polyline points="20 6 9 17 4 12"></polyline>
                        </svg>
                        <span>{{ item.item if item.item else item }}</span>
                    </li>
                    {% endfor %}
                </ul>
            </div>
            {% endif %}
        </div>
    </div>
</section>
