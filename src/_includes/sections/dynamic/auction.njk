{# DYNAMIC AUCTION SECTION - Matches original CSS structure #}
<section class="auction animate-on-scroll" id="auction">
    <div class="container">
        <div class="auction-inner">
            <p class="meta auction-label">{{ section.label if section.label else 'Auction' }}</p>
            <h2 class="auction-title">{{ section.title }}</h2>
            <p class="auction-desc">{{ section.description }}</p>
            
            <div class="auction-info">
                <div class="auction-item">
                    <p class="meta auction-item-label">Auction Date</p>
                    <p class="auction-item-value">{{ section.date }}</p>
                    {% if section.date_sub %}
                    <p class="meta auction-item-sub">{{ section.date_sub }}</p>
                    {% endif %}
                </div>
                <div class="auction-item">
                    <p class="meta auction-item-label">Estimate</p>
                    <p class="auction-item-value">{{ section.estimate }}</p>
                    {% if section.estimate_sub %}
                    <p class="meta auction-item-sub">{{ section.estimate_sub }}</p>
                    {% endif %}
                </div>
                <div class="auction-item">
                    <p class="meta auction-item-label">Format</p>
                    <p class="auction-item-value">{{ section.format }}</p>
                </div>
            </div>
            
            <div class="auction-cta">
                <a href="{{ section.cta_link }}" target="_blank" class="btn-primary">{{ section.cta_text if section.cta_text else 'REGISTER TO BID â†’' }}</a>
                {% if section.note %}
                <p class="meta auction-note">{{ section.note }}</p>
                {% endif %}
            </div>
        </div>
    </div>
</section>
