{# DYNAMIC HERO SECTION - Two-column layout matching live site #}
<section class="hero" id="hero">
    <div class="container hero-inner">
        <div class="hero-content">
            {% if section.pre_headline %}
                <p class="meta hero-label">{{ section.pre_headline }}</p>
            {% endif %}
            
            <h1 class="hero-title">{{ section.headline }}</h1>
            
            {% if section.subheadline %}
                <p class="hero-subtitle">{{ section.subheadline }}</p>
            {% endif %}
            
            {# Email Form - check both old and new field structures #}
            {% set showForm = section.email_form.show if section.email_form else section.show_form %}
            {% if showForm !== false %}
            <div class="hero-form">
                <form id="heroForm" action="/api/subscribe" method="POST">
                    <input type="email" name="email" class="form-input" placeholder="{{ section.email_form.placeholder if section.email_form.placeholder else 'Enter your email' }}" required>
                    
                    {# Interests dropdown - check both old and new field structures #}
                    {% set showInterests = section.email_form.show_interests if section.email_form else true %}
                    {% if showInterests !== false %}
                    <select name="role" class="form-select" required>
                        <option value="" disabled selected>{{ section.email_form.interests_label if section.email_form.interests_label else 'I am interested as...' }}</option>
                        {% if section.email_form.interests and section.email_form.interests.length > 0 %}
                            {% for interest in section.email_form.interests %}
                                <option value="{{ interest.option | lower | replace(' ', '_') }}">{{ interest.option }}</option>
                            {% endfor %}
                        {% else %}
                            <option value="collector">Collector</option>
                            <option value="investor">Investor</option>
                            <option value="art_enthusiast">Art Enthusiast</option>
                            <option value="press">Press/Media</option>
                            <option value="gallery">Gallery/Institution</option>
                            <option value="other">Other</option>
                        {% endif %}
                    </select>
                    {% endif %}
                    
                    <button type="submit" class="btn-primary">{{ section.email_form.button_text if section.email_form.button_text else 'NOTIFY ME' }}</button>
                    <input type="hidden" name="source" value="hero_form">
                </form>
                
                {% if section.microcopy %}
                    <p class="meta hero-microcopy">{{ section.microcopy }}</p>
                {% endif %}
                
                <div class="form-success" id="heroSuccess">Thank you! You're now on the list.</div>
                <div class="form-error" id="heroError"></div>
            </div>
            {% endif %}
            
            {# Primary CTA Button #}
            {% set showCta = section.cta.show if section.cta else (section.cta_text | length > 0) %}
            {% set ctaText = section.cta.text if section.cta else section.cta_text %}
            {% set ctaLink = section.cta.link if section.cta else section.cta_link %}
            {% if showCta !== false and ctaText %}
            <div style="margin-top: 24px;">
                <a href="{{ ctaLink if ctaLink else 'https://auction.zyborn.com' }}" target="_blank" class="btn-primary" style="font-size: 16px; padding: 18px 36px;">{{ ctaText }} â†’</a>
                {% if section.microcopy_2 %}
                    <p class="meta" style="color: var(--color-steel-300); margin-top: 12px;">{{ section.microcopy_2 }}</p>
                {% endif %}
            </div>
            {% endif %}
            
            {% if section.show_social !== false and section.show_social %}
            <div class="hero-social">
                <a href="https://www.instagram.com/zyborn.art/" target="_blank" rel="noopener" aria-label="Instagram">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                        <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                        <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                        <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                    </svg>
                </a>
                <a href="https://x.com/ZYBORN_ART" target="_blank" rel="noopener" aria-label="X (Twitter)">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                    </svg>
                </a>
                <a href="https://www.tiktok.com/@zyborn_art" target="_blank" rel="noopener" aria-label="TikTok">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                    </svg>
                </a>
                <a href="https://www.youtube.com/@ZYBORN_ART" target="_blank" rel="noopener" aria-label="YouTube">
                    <svg viewBox="0 0 24 24" fill="currentColor">
                        <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                    </svg>
                </a>
            </div>
            {% endif %}
        </div>
        
        {# Hero Image - support both old (image) and new (hero_image) field names #}
        {% set heroImg = section.hero_image if section.hero_image else section.image %}
        {% if heroImg %}
        <div class="hero-image">
            <img src="{{ heroImg }}" alt="{{ section.hero_image_alt if section.hero_image_alt else (section.image_alt if section.image_alt else 'Hero image') }}" loading="eager" fetchpriority="high">
        </div>
        {% endif %}
    </div>
</section>
