{# Accordion/FAQ Section - Expandable Q&A sections #}
<section class="section-accordion">
  <div class="container">
    {% if section.title %}
      <h2 class="section-title">{{ section.title }}</h2>
    {% endif %}
    {% if section.subtitle %}
      <p class="section-subtitle">{{ section.subtitle }}</p>
    {% endif %}
    <div class="accordion" data-expand-first="{{ section.expand_first | default(true) }}">
      {% for item in section.items %}
        <div class="accordion-item{% if loop.first and section.expand_first %} is-open{% endif %}">
          <button class="accordion-header" aria-expanded="{% if loop.first and section.expand_first %}true{% else %}false{% endif %}">
            <span class="accordion-title">{{ item.question }}</span>
            <span class="accordion-icon">+</span>
          </button>
          <div class="accordion-content">
            {{ item.answer | safe }}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
