{# DYNAMIC THANKS SECTION - Matches original CSS structure #}
<section class="thanks animate-on-scroll" id="thanks">
    <div class="container">
        {{ section.text | markdown | safe if section.text else '<p>Thank you to my supporters for their generous contributions and trust, which made this project possible.</p>' }}
        {% if section.credits %}
        <div class="thanks-credits">
            {% for credit in section.credits %}
            <div class="credit-item">
                <span class="credit-name">{{ credit.name }}</span>
                {% if credit.role %}
                <span class="credit-role">{{ credit.role }}</span>
                {% endif %}
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>
</section>
