{# DYNAMIC CURATOR SECTION #}
<section class="curator" id="curator">
    <div class="container">
        <div class="curator-content">
            {% if section.label %}
                <p class="meta curator-label">{{ section.label }}</p>
            {% endif %}
            
            <h2 class="curator-name">{{ section.name }}</h2>
            
            {% if section.title %}
                <p class="curator-title">{{ section.title }}</p>
            {% endif %}
            
            {% if section.essay_title %}
                <h3 class="curator-essay-title">{{ section.essay_title }}</h3>
            {% endif %}
            
            <div class="curator-excerpt">
                {% if section.excerpt %}
                    <p>{{ section.excerpt }}</p>
                {% endif %}
                {% if section.excerpt_2 %}
                    <p>{{ section.excerpt_2 }}</p>
                {% endif %}
            </div>
            
            {% if section.read_more_link %}
                <a href="{{ section.read_more_link }}" class="curator-link">{{ section.read_more_text if section.read_more_text else 'Read More' }}</a>
            {% endif %}
        </div>
        
        {% if section.image %}
            <div class="curator-image">
                <img src="{{ section.image }}" alt="{{ section.name }}">
            </div>
        {% endif %}
    </div>
</section>
