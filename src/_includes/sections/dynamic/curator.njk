{# DYNAMIC CURATOR SECTION - Matches original CSS structure #}
<section class="curator animate-on-scroll" id="curator">
    <div class="container">
        <div class="curator-card">
            <p class="meta curator-label">{{ section.label if section.label else 'Curatorial Recommendation' }}</p>
            <h3 class="curator-name">{{ section.name }}</h3>
            <h2 class="curator-title">{{ section.essay_title }}</h2>
            <p class="curator-text">{{ section.excerpt }}</p>
            {% if section.excerpt_2 %}
            <p class="curator-text">{{ section.excerpt_2 }}</p>
            {% endif %}
            {% if section.read_more_link %}
            <a href="{{ section.read_more_link }}" class="btn-secondary btn-dark">{{ section.read_more_text if section.read_more_text else 'Read More' }}</a>
            {% endif %}
        </div>
    </div>
</section>
