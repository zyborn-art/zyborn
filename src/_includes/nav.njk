<!-- NAVIGATION -->
<nav class="nav" id="nav">
    <div class="container nav-inner">
        <a href="/" class="nav-logo" aria-label="ZYBORN Home">
            <img src="/images/logo.png" alt="ZYBORN">
        </a>
        
        <ul class="nav-menu">
            {% for item in navigation %}
                <li>
                    <a href="{{ item.url }}"
                       {% if item.external %}target="_blank" rel="noopener"{% endif %}
                       {% if item.external %}class="nav-auction"{% endif %}
                       {% if page.url == item.url %}class="active"{% endif %}>
                        {{ item.label }}{% if item.external %} →{% endif %}
                    </a>
                </li>
            {% endfor %}
        </ul>
        
        <button class="nav-toggle" aria-label="Toggle menu" aria-expanded="false">
            <span></span>
            <span></span>
            <span></span>
        </button>
    </div>
</nav>

<!-- Mobile Menu Overlay -->
<div class="nav-overlay" id="navOverlay">
    {% for item in navigation %}
        <a href="{{ item.url }}"
           {% if item.external %}target="_blank" rel="noopener"{% endif %}
           {% if item.external %}class="btn-primary nav-auction" style="font-size: 20px;"{% endif %}>
            {{ item.label }}{% if item.external %} →{% endif %}
        </a>
    {% endfor %}
</div>
