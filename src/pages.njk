---
pagination:
  data: customPagesData
  size: 1
  alias: customPage
permalink: "/{{ customPage.data.slug }}/index.html"
layout: base.njk
eleventyComputed:
  title: "{{ customPage.data.title }}"
  meta_description: "{{ customPage.data.meta_description }}"
  og_image: "{{ customPage.data.og_image }}"
---

{# Custom Page Template - Renders dynamic sections #}

<main class="generic-page">
  {% set sections = customPage.data.sections %}
  
  {% if sections %}
    {% include "sections.njk" %}
  {% else %}
    <div class="container" style="padding: 100px 20px; text-align: center;">
      <p>No sections added to this page yet.</p>
    </div>
  {% endif %}
</main>
